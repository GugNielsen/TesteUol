                 xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                 BackgroundImageSource="">

    <StackLayout Margin="18"
                 Padding="36"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 BackgroundColor="White" 
                 HeightRequest="500"
                 WidthRequest="400">

          <StackLayout Orientation="Vertical">
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--{Binding Date,StringFormat='{0:dd}'}-->
                <!--  header background  -->
                <StackLayout Margin="5"  Orientation="Horizontal" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
               <Label Text="{Binding Date,StringFormat='{0:dd}'}" TextColor="#000" FontSize="34" VerticalOptions="Center"/>
                 <Label Text="{Binding Date,StringFormat='{0:MMMM,dddd}'}"  TextColor="#000" FontSize="12" VerticalOptions="Center"/>
             </StackLayout>

                <StackLayout  Margin="0,50,0,-20">
                       <forms:AnimationView
                x:Name="LottieAnimation"
                Grid.Row="0"
                Animation="{Binding ImageAnimada}"
                AutoPlay="true"
                Loop="True"
                Speed="1"
                Scale="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" />
                </StackLayout>
            </Grid>
              <!--{Binding TemperaturaMinima}-->
              <!--Binding TemperaturaMaxima}-->
            <!--  Profile Name  -->
            <StackLayout Margin="0,40,0,40" HorizontalOptions="Center">
                  <StackLayout  Orientation="Horizontal"  VerticalOptions="EndAndExpand" Margin="5">
               <Label Text="{Binding TemperaturaMinima}" TextColor="#000" FontSize="25" VerticalOptions="Center"/>
                  <Label Text="°C" Margin="0,0,50,0" TextColor="Black"  HorizontalOptions="StartAndExpand" FontSize="15" VerticalOptions="Center"/>
                   <Label Text="{Binding TemperaturaMaxima}" HorizontalOptions="Start" TextColor="#000" FontSize="25" VerticalOptions="Center"/>
                  <Label Text="°C" TextColor="Black" FontSize="15" HorizontalOptions="End" VerticalOptions="Center"/>
             </StackLayout>

                  <StackLayout Spacing="100" Orientation="Horizontal"  VerticalOptions="StartAndExpand" Margin="5,-5">
                     <Label Text="Min" Margin="5,0,0,0" TextColor="#7D7D7D"  HorizontalOptions="CenterAndExpand" FontSize="15"/>
                       <Label Text="Max" Margin="0,0,20,0" TextColor="#7D7D7D" HorizontalOptions="CenterAndExpand" FontSize="15"/>

                 </StackLayout>

            
            </StackLayout>

                <Label Margin="0" Text="{Binding Summary}" TextColor="#7D7D7D" FontSize="12" HorizontalOptions="Center"/>

            <BoxView Margin="20,10" HeightRequest="1" BackgroundColor="#F1F2F6"/>

            <Grid RowSpacing="20" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="60"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                    <RowDefinition Height="AUTO"/>
                </Grid.RowDefinitions>
                <StackLayout Spacing="10" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="0" Grid.RowSpan="1"  Grid.ColumnSpan="3">
                <Image Source="humidity.png" HeightRequest="20" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand"/>
                <Label Text="{Binding  Humidity}"  TextColor="Black" FontSize="12" FontAttributes="Bold" />
                <Label Text="Humidity" TextColor="#7D7D7D" FontSize="12" />
                </StackLayout >

                  <StackLayout  Spacing="10" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="2" Grid.RowSpan="1"  Grid.ColumnSpan="3">
                <Image   Source="wind.png" HeightRequest="20" />
                <Label  Text="{Binding  WindSpeed}"  HorizontalOptions="EndAndExpand" TextColor="Black" FontSize="12" FontAttributes="Bold" /> 
                <Label  Text="Wind"  HorizontalOptions="CenterAndExpand" TextColor="#7D7D7D" FontSize="12" />

                </StackLayout >

                   <StackLayout  Spacing="10" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Grid.Row="1" Grid.RowSpan="1"  Grid.ColumnSpan="3">
                  <Image  Source="pressure.png" HeightRequest="20" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand"/>
                <Label  Text="{Binding Pressure}"  HorizontalOptions="EndAndExpand" TextColor="Black" FontSize="12" FontAttributes="Bold" /> 
               <Label  Text="Pressure"  HorizontalOptions="EndAndExpand" TextColor="#7D7D7D" FontSize="12" />
                </StackLayout >

            </Grid>

            <BoxView Margin="20,10" HeightRequest="1" BackgroundColor="#F1F2F6"/>

            <Image Source="{Binding MapUrl}" Margin="20,0,20,20"/>

